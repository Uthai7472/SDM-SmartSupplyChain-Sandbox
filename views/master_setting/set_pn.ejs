<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>

    <div>
        <h1>Part number setting</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>TSK Part number</th>
                <th>DNTH Part number</th>
                <th>TTT Part number</th>
                <th>NTS Part number</th>
                <th>SDM Part number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% pn_datas.forEach((data) => { %> 
                <tr>
                    <td><%= data.id %></td>
                    <td><%= data.tsk_pn %></td>
                    <td><%= data.dnth_pn %></td>
                    <td><%= data.ttt_pn %></td>
                    <td><%= data.nts_pn %></td>
                    <td><%= data.sdm_pn %></td>
                    <td>
                        <a href="/master_setting/pn_setting/edit?id=<%= data.id %>" class="btn btn-primary">Edit</a>
                        <a href="/master_setting/pn_setting/deleting?id=<%= data.id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
            <tr>
                <form action="/master_setting/pn_setting/add" method="POST">
                    <td>
                    </td>
                    <td>
                        <input type="text" name="tsk_pn" id="tsk_pn">
                    </td>
                    <td>
                        <input type="text" name="dnth_pn" id="dnth_pn">
                    </td>
                    <td>
                        <input type="text" name="ttt_pn" id="ttt_pn">
                    </td>
                    <td>
                        <input type="text" name="nts_pn" id="nts_pn">
                    </td>
                    <td>
                        <input type="text" name="sdm_pn" id="sdm_pn">
                    </td>
                    <td></td>
                    
            </tr>
        </tbody>
    </table>
    <div>
        <button type="submit" class="btn btn-success">Add</button>
    </div>
    </form>
    
</body>
</html>