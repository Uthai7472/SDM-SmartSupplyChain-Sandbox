    <table class="table">
        <thead>
            <tr>
                <th>NO.</th>
                <th>DNTH RECEIVE QR PACKING LIST</th>
                <th>QR KANBAN IN</th>
                <th>KANBAN DATE IN</th>
                <th>KANBAN TIME IN</th>
                <th>QTY</th>
                <th>PART NUMBER</th>
                <th>TOTAL QTY EACH PN</th>
                <th>DNTH QR PRODUCTION</th>
                
                <!-- <th>COUNT BOX</th> -->
                <!-- <th>DNTH Receive</th> -->
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% let count = 0; %>
            <% dnth_datas.forEach((dnth_data) => { %>
            <tr>
                <% count++; %>
                <td><%= count %></td>
                <td><%= dnth_data.qr_pack_in %></td>
                <td><%= dnth_data.qr_kanban_in %></td>
                <td><%= dnth_data.kanban_date_in.toLocaleDateString('en-GB') %></td>
                <td><%= dnth_data.kanban_time_in %></td>
                <td><%= dnth_data.qty_kanban_in %></td>
                <td><%= dnth_data.partNumber %></td>
                <td><%= dnth_data.totalQtyIn %></td>
                <td><%= dnth_data.qr_prod %></td>
                <td>
                    <a class="btn btn-primary" href="#">Edit</a>
                    <a class="btn btn-secondary" href="#">Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>


