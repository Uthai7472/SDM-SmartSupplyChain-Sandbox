            flex-direction: row;
            justify-content: center;
            align-items: center;
        }
        .my_fac_block .my_fac_content .my_fac_rec {
            width: 33%;
            height: 100%;
            border: 1px solid rgb(1, 180, 112);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
        }

        .my_fac_block .my_fac_content .my_fac_pd {
