            font-weight: bold;
            border: 1px solid rgb(179, 179, 179);
            display: flex;
            justify-content: center;
            align-items: center;
            padding-top: 8px;
        }
        .detail {
            width: 80%;
            height: 5rem;
            font-size: 20px;
            font-weight: bold;
            border: 1px solid rgb(179, 179, 179);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
